<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="56dp"
              android:orientation="vertical">
    <View
        android:background="?android:listDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <LinearLayout
            android:id="@+id/ll_home"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_home"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:id="@+id/tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textSize="14sp"
                android:layout_marginTop="3dp"
                android:textColor="@color/text_black"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_lyh"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_lyh"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:id="@+id/tv_lyh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="菱悦会"
                android:textSize="14sp"
                android:layout_marginTop="3dp"
                android:textColor="@color/text_black"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_shangcheng"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_shangcheng"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:id="@+id/tv_shangcheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商城"
                android:textSize="14sp"
                android:layout_marginTop="3dp"
                android:textColor="@color/text_black"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dlr"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_dlr"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:id="@+id/tv_dlr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="代理人中心"
                android:textSize="14sp"
                android:layout_marginTop="3dp"
                android:textColor="@color/text_black"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>